{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1>Mot de passe oublié</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrez votre adresse mail et nous vous enverrons un lien pour changer votre mot de passe.
            </small>
        </div>

        <button class="btn btn-primary">Envoyer le lien</button>
    {{ form_end(requestForm) }}
    <a href="{{ path('app_login') }}"><button class="btn btn-dark btn-lg">Annuler</button></a>

{% endblock %}
