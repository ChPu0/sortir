{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} {{ page_name }}{% endblock %}

{% block body %}
    <div class="jumbotron mt-2">
        <h1 class="text-center display-4 lead">{{ page_name }}</h1>

        <table id="campusTable" class="table table-striped table-bordered" style="width:100%">
            <thead class="thead-dark text-center">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                {% if is_granted('ROLE_ADMIN') %}
                    <th scope="col">Action</th>
                {% endif %}
            </tr>
            </thead>
            <tbody>
            {% if campus is defined and campus is not empty %}
                {% for one in campus %}
                    <tr class="text-center">
                        <td scope="row">{{ one.id }}</td>
                        <td scope="row">{{ one.nom }}</td>
                        {% if is_granted('ROLE_ADMIN') %}
                            <td scope="row">
                                <div class="btn-group">
                                    <a href="{{ path('edit_campus', {'id': one.id}) }}" class="btn btn-outline-success">Modifier</a>
                                    <a href="{{ path('delete_campus', {'id': one.id}) }}" class="btn btn-outline-danger">Supprimer</i></a>
                                </div>
                            </td>
                        {% endif %}
                    </tr>
                {% endfor %}
            {% else %}
                <tr class="text-center">
                    <th class="text-center text-muted" scope="row" colspan="4">No Campus found...</th>
                </tr>
            {% endif %}
            </tbody>
        </table>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('add_campus') }}" class="btn btn-outline-primary">Ajouter un Campus</a>
        {% endif %}
    </div>
{% endblock %}