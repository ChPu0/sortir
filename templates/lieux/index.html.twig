{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} {{page_name  }}{% endblock %}

{% block body %}
    <div class="jumbotron mt-2">
        <h1 class="text-center display-4 lead">{{ page_name }}</h1>
        {% if is_granted('ROLE_ADMIN') %}
           <button><a href="{{ path('add_lieu') }}" class="btn btn-primary w-100 mt-4 mb-4">Ajouter un lieu</a></button>
        {% endif %}
        <table id="lieuTable" class="table table-striped table-bordered" style="width:100%">
            <thead class="thead-dark text-center">
            <tr>
                <th scope="col">nom Lieu</th>
                <th scope="col">rue</th>
                <th scope="col">latitude</th>
                <th scope="col">longitude</th>
                <th scope="col">Ville</th>
                {% if is_granted('ROLE_ADMIN') %}
                    <th scope="col">Action</th>
                {% endif %}
            </tr>
            </thead>
            <tbody>
            {% if lieu is defined and lieux is not empty %}
                {% for lieu in lieus %}
                    <tr class="text-center">
                        <td scope="row">{{ lieu.id }}</td>
                        <td scope="row">{{ lieu.nom }}</td>
                        <td scope="row">{{ lieu.rue}}</td>
                        <td scope="row">{{ lieu.latitude }}</td>
                        <td scope="row">{{ lieu.longitude}}</td>
                        <td scope="row">{{ lieu.ville.nom}}</td>
                        {% if is_granted('ROLE_ADMIN') %}
                            <td scope="row">
                                <div class="btn-group">

                                </div>
                            </td>
                        {% endif %}
                    </tr>
                {% endfor %}
            {% else %}
                <tr class="text-center">
                    <th class="text-center text-muted" scope="row" colspan="7">Aucun lieu trouv√©...</th>
                </tr>
            {% endif %}
            </tbody>
            <i class="fas fa-trash-alt" ><a href="{{ path('delete_lieu',{'id':lieux.id})}}" class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Supprimer"></a></i>
            <i class="fas fa-plus-circle"><a href="{{ path('edit_lieu',{'id':lieux.id}) }}" class="btn btn-success" data-toggle="tooltip" data-placement="top" title="Editer"></a></i>
            <a href="{{ path('add_lieu') }}"><input type="button" value="+"></a>
        </table>

    </div>
{% endblock %}