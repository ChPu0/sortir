{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} {{ page_name }}{% endblock %}
{% block body %}
    <div class="jumbotron mt-2">
        <h1 class="text-center display-4 lead">{{ page_name }}</h1>
        <div class="card mb-4">
            <ul class="list-group list-group-flush">
                <div class="card-header">
                    <h4> sortie : {{ sortie.nom}}</h4>
                </div>
                <li class="list-group-item">
                    <span class="font-weight-bold">Nom : </span>
                    {{ sortie.nom }}
                </li>
                <li class="list-group-item">
                    <span class="font-weight-bold">Date et heure de la sortie : </span>
                    {{ sortie.dateHeureDebut|date('d/m/y h:m') }}
                </li>
                <li class="list-group-item">
                    <span class="font-weight-bold">Date limite d'inscription : </span>
                    {{ sortie.dateLimiteInscription|date('d/m/y h:m') }}
                </li>
                <li class="list-group-item">
                    <span class="font-weight-bold">Nombre de places : </span>
                    {{ sortie.nbinscriptionsmax }}
                </li>
                <li class="list-group-item">
                    <span class="font-weight-bold">Dur√©e : </span>
                    {{ sortie.duree }}
                </li>
                <li class="list-group-item">
                    <span class="font-weight-bold">Description et infos : </span>
                    {{ sortie.infosSortie }}
                </li>
            </ul>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <h4>Campus : {{ sortie.campus.nom }}</h4>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <span class="font-weight-bold">Nom : </span>
                    {{ sortie.campus.nom }}
                </li>
            </ul>
        </div>

        <div class="card">
            <div class="card-header">
                <h4>Lieu : {{ sortie.lieu.nom }}</h4>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <span class="font-weight-bold">Nom : </span>
                    {{ sortie.lieu.nom }}
                </li>
                <li class="list-group-item">
                    <span class="font-weight-bold">Rue : </span>
                    {{ sortie.lieu.rue }}
                </li>
                <li class="list-group-item">
                    <span class="font-weight-bold">Code postal : </span>
                    {{ sortie.lieu.ville.codePostal }}
                </li>
                <li class="list-group-item">
                    <span class="font-weight-bold">Latitude : </span>
                    {{ sortie.lieu.latitude }}
                </li>
                <li class="list-group-item">
                    <span class="font-weight-bold">Longitude : </span>
                    {{ sortie.lieu.longitude }}
                </li>
            </ul>
        </div>

        <hr>

        <div class="text-center">
            <h1 class="lead display-4">Liste des participants inscrits</h1>
        </div>

        <div class="row">
            <table id="tableParticipants" class="table table-striped table-bordered" style="width:100%">
                <thead class="thead-dark text-center">
                <tr>
                    <th scope="col">Pseudo</th>
                    <th scope="col">Nom</th>
                </tr>
                </thead>
                <tbody>
                {% if participants is not empty %}
                    {% for participant in participants %}
                        <tr class="text-center">
                            <td scope="row">{{ participant.pseudo }}</td>
                            <td scope="row"> {{ participant.prenom }} {{ participant.nom }}</td>
                        </tr>
                    {% endfor %}
                {% endif %}

                </tbody>
            </table>

            <a href="{{ path('sortie_liste') }}"><button class="btn btn-dark btn-block w-100">Annuler</button></a>

        </div>
    </div>
{% endblock %}